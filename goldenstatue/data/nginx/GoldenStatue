#手机端
server {
	listen 80;
	root /var/www/BakeWebOut/goldenstatue/;
	server_name goldenstatue.hongbeibang.com goldenstatue.test2.hongbeibang.com;

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_pass http://localhost:3000;
	}
}
#后台端
server {
	listen 80;
	root /var/www/BakeWebOut/goldenstatue/;
	server_name backstage.goldenstatue.hongbeibang.com backstage.goldenstatue.test2.hongbeibang.com;
	rewrite ^/(.*\.(html|css|js|map|jpg|jpeg|png|gif|mp3|midi|swf|ico|json)) /static/backbuild/$1 last;

	location ~ \.(html|css|js|map|jpg|jpeg|png|gif|mp3|midi|swf|ico|json) {
		try_files $uri =404;
	}

	location = / {
		rewrite ^/(.*)$ /index.html permanent;
	}

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_pass http://localhost:8080;
	}
}
#api端
server {
	listen 80;
	root /var/www/BakeWebOut/;
	server_name api.goldenstatue.hongbeibang.com api.goldenstatue.test2.hongbeibang.com;

	location ~ \.(html|css|js|map|jpg|jpeg|png|gif|mp3|midi|swf|ico|json) {
		try_files $uri =404;
	}

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_pass http://localhost:8080;
	}
}
